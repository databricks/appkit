{
  "name": "root",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm -r --stream --parallel --color=always dev",
    "build": "pnpm -r build",
    "build:sdk": "pnpm build && tsdown --config tools/sdk-build/tsdown.config.ts",
    "clean": "pnpm exec rm -rf dist && pnpm -r exec rm -rf dist tsconfig.tsbuildinfo",
    "clean:full": "pnpm exec rm -rf dist node_modules && pnpm -r exec rm -rf dist tsconfig.tsbuildinfo node_modules",
    "create-package": "NODE_OPTIONS='--import tsx' plop --plopfile tools/create-sdk-package.ts",
    "playground": "tsx --env-file=apps/dev-playground/.env apps/dev-playground/dev-server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "pnpm -r typecheck",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "(*.ts|*.tsx|*.js|*.jsx|*.json|*.md|*.yml|*.yaml|*.css)": [
      "pnpm lint:fix"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.7.2",
    "@vitejs/plugin-react": "^5.0.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.5.1",
    "plop": "^4.0.4",
    "tsdown": "^0.15.7",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
