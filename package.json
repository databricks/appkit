{
  "name": "@databricks/apps",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "llms.txt",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.js",
      "types": {
        "default": "./dist/server/index.d.ts",
        "browser": "./dist/server/browser-stub.d.ts"
      },
      "browser": "./dist/server/browser-stub.js"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.js"
    }
  },
  "scripts": {
    "build:sdk": "pnpm build && tsdown --config tools/sdk-build/tsdown.config.ts",
    "build": "pnpm -r build",
    "check:fix": "biome check --write .",
    "check": "biome check .",
    "clean:full": "pnpm exec rm -rf dist node_modules && pnpm -r exec rm -rf dist tsconfig.tsbuildinfo node_modules && pnpm -r clean:full",
    "clean": "pnpm exec rm -rf dist && pnpm -r exec rm -rf dist tsconfig.tsbuildinfo && pnpm -r clean",
    "create-package": "NODE_OPTIONS='--import tsx' plop --plopfile tools/create-sdk-package.ts",
    "dev": "pnpm -r build && pnpm build:sdk && NODE_ENV=development pnpm -r --stream --parallel --color=always dev",
    "format:check": "biome format .",
    "format": "biome format --write .",
    "lint:fix": "biome lint --write .",
    "lint": "biome lint .",
    "pack": "pnpm pack",
    "prepare": "husky",
    "publish:dry": "pnpm publish --dry-run",
    "release:dry": "pnpm run build:sdk && pnpm run pack && pnpm run publish:dry",
    "release": "pnpm run build:sdk && pnpm run pack && pnpm run publish",
    "setup:repo": "./tools/setup.sh",
    "start": "NODE_ENV=production pnpm build:sdk && pnpm --filter=app-template build:app && pnpm --filter=app-template start:local",
    "test:watch": "vitest",
    "test": "vitest run",
    "typecheck": "pnpm -r typecheck"
  },
  "lint-staged": {
    "(*.ts|*.tsx|*.js|*.jsx|*.json|*.md|*.yml|*.yaml|*.css)": [
      "pnpm lint:fix"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.7.2",
    "@vitejs/plugin-react": "^5.0.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.5.1",
    "plop": "^4.0.4",
    "tsdown": "^0.15.7",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
